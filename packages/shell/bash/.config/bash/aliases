#!/usr/bin/env bash

# Navigation shortcuts
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"

# List directory contents
# Prefer GNU ls (gls) if available, fallback to system ls
if command -v gls >/dev/null 2>&1; then
    alias ls="gls --color=auto"
    alias l="gls -lah --color=auto"
    alias la="gls -lAh --color=auto"
    alias ll="gls -lh --color=auto"
    alias lsa="gls -lah --color=auto"
elif [[ "$(uname -s)" != "Darwin" ]]; then
    # GNU ls on Linux
    alias ls="ls --color=auto"
    alias l="ls -lah"
    alias la="ls -lAh"
    alias ll="ls -lh"
    alias lsa="ls -lah"
else
    # BSD ls on macOS (will be overridden by darwin config)
    alias l="ls -lah"
    alias la="ls -lAh"
    alias ll="ls -lh"
    alias lsa="ls -lah"
fi

# Colorize output
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias tree='tree -C'

# Git shortcuts
alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gl="git pull"
alias gd="git diff"
alias gb="git branch"
alias gco="git checkout"

# Safety aliases
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

# Utility shortcuts
alias h="history"
alias j="jobs"
alias c="clear"
alias reload="source ~/.bashrc"

# Modern tool replacements (if available)
command -v bat >/dev/null && alias cat="bat"
command -v fd >/dev/null && alias find="fd"
command -v rg >/dev/null && alias grep="rg"

# exa/eza override (only if user wants modern ls replacement)
if command -v eza >/dev/null 2>&1; then
    alias ls="eza --color=auto"
    alias l="eza -lah --color=auto"
    alias la="eza -lAh --color=auto"
    alias ll="eza -lh --color=auto"
    alias lsa="eza -lah --color=auto"
elif command -v exa >/dev/null 2>&1; then
    alias ls="exa --color=auto"
    alias l="exa -lah --color=auto"
    alias la="exa -lAh --color=auto"
    alias ll="exa -lh --color=auto"
    alias lsa="exa -lah --color=auto"
fi

# Emacs shortcuts
alias kill-emacs='emacsclient -e "(kill-emacs)"'
alias e="emacsclient -n"
alias ec="emacsclient -c"
